datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Order {
  createdAt  DateTime  @default(now())
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?
  discount   Float?
  id         String    @id @default(cuid())
  product    Product?  @relation(fields: [productId], references: [id])
  productId  String?
  quantity   Int?
  totalPrice Int?
  updatedAt  DateTime  @updatedAt
}

model Customer {
  address   Address? @relation(fields: [addressId], references: [id])
  addressId String?
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  orders    Order[]
  phone     String?
  updatedAt DateTime @updatedAt
}

model Address {
  address_1 String?
  address_2 String?
  city      String?
  createdAt DateTime   @default(now())
  customers Customer[]
  id        String     @id @default(cuid())
  state     String?
  updatedAt DateTime   @updatedAt
  zip       Int?
}

model Product {
  assets      Asset[]
  categories  Category[]
  createdAt   DateTime   @default(now())
  description String?
  id          String     @id @default(cuid())
  itemPrice   Float?
  name        String?
  orders      Order[]
  updatedAt   DateTime   @updatedAt
}

model Price {
  createdAt DateTime   @default(now())
  discounts Discount[]
  formatted String?
  id        String     @id @default(cuid())
  raw       Float?
  updatedAt DateTime   @updatedAt
}

model Discount {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  price      Price?    @relation(fields: [priceId], references: [id])
  priceId    String?
  updatedAt  DateTime  @updatedAt
  validFrom  DateTime?
  validUntil DateTime?
  value      Int?
}

model Category {
  asset      Asset?     @relation(fields: [assetId], references: [id])
  assetId    String?
  categories Category[] @relation(name: "parent")
  createdAt  DateTime   @default(now())
  id         String     @id @default(cuid())
  name       String?
  parent     Category?  @relation(name: "parent", fields: [parentId], references: [id])
  parentId   String?
  products   Product[]
  slug       String?
  updatedAt  DateTime   @updatedAt
}

model Asset {
  alt       String?
  category  Category
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  products  Product[]
  updatedAt DateTime  @updatedAt
  url       String?
}